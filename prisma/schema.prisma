generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Vehicle {
  id           String   @id @default(uuid())
  type         VehicleType
  brand        String
  model        String
  year         Int
  price        Float?
  mileage      Int?     // km
  fuelType     String?
  transmission String?
  color        String?
  images       String   @default("")  // Tek string olarak tutacağız, URL'leri virgülle ayır (örneğin "url1,url2,url3")
  featured     Boolean  @default(false)
  slug         String   @unique
  description  String?  // @db.Text'i SİL, SQLite'ta gerek yok
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isFeatured  Boolean @default(false)
}


enum VehicleType {
  CAR
  MOTORCYCLE
}