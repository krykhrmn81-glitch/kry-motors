generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Vehicle {
  id           String    @id @default(cuid()) // uuid() yerine cuid() kullanalım (SQLite uyumlu)
  type         VehicleType
  brand        String
  model        String
  year         Int
  price        Float?
  mileage      Int?      // km
  fuelType     String?
  transmission String?
  color        String?
  images       String?   @default("") // virgülle ayrılmış URL'ler, boş olabilir
  isFeatured   Boolean   @default(false) // sadece bir tane tuttuk
  slug         String    @unique
  description  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // YENİ ALANLAR
  ownerName    String?
  city         String?
  ownerPhone   String?

  @@map("vehicles")
}

enum VehicleType {
  CAR
  MOTORCYCLE
}